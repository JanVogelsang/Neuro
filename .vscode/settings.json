{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "workbench.colorTheme": "Gray Matter Light",
  "[markdown]": {
    "editor.quickSuggestions": true
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "files.exclude": {
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "spellright.language": [
    "en"
  ],
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext"
  ],
  "cSpell.words": [
    "Brodmann",
    "Corti",
    "GPCR",
    "GPCRs",
    "Reissner's",
    "Tectorial",
    "amacrine",
    "brainstem",
    "colliculus",
    "confirmational",
    "dorsolateral",
    "hyperpolarizes",
    "hyperpolarizing",
    "interneurons",
    "ipsilateral",
    "isofrequency",
    "koniocellular",
    "magnocellular",
    "opsin",
    "parvocellular",
    "photopsin",
    "photoreceptors",
    "retinofugal",
    "retinotopy",
    "rhodopsins",
    "stereocilia",
    "tectum",
    "tonotopic",
    "tonotopically",
    "transducin",
    "umami",
    "vascularis",
    "ventro",
    "vestibuli"
  ]
}
